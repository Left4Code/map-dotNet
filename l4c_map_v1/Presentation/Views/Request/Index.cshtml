@model IEnumerable<Presentation.Models.RequestVM>

@{
    ViewBag.Title = "Index";
}

<section class="content">
    <div class="row">
        <div class="col-12">


            <div class="box">
                @Html.ActionLink("Create New", "Create", new { htmlAttributes = new { @class = "btn btn-block btn-rounded btn-success" } })


                <!-- /.box-header -->
                <div class="box-body">
                    <div class="table-responsive">
                        <div id="example_wrapper" class="dataTables_wrapper">
                         <div id="example_filter" class="dataTables_filter"><label>Search:<input type="search" class="" placeholder="" aria-controls="example"></label></div><table id="example" class="table table-bordered table-hover display nowrap margin-top-10 w-p100 dataTable" role="grid" aria-describedby="example_info">
                                <thead>
                                    <tr role="row"><th class="sorting_asc" tabindex="0" aria-controls="example" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 118px;">id request</th><th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 150px;">price</th><th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 180px;">begin date</th><th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending" style="width: 180px;">end date</th><th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" aria-label="Salary: activate to sort column ascending" style="width: 160px;">status</th><th style="width: 250px;">actions</th></tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in ViewBag.result)
                                    {
                                        <tr>
                                            <td>
                                                @item.idRequest
                                            </td>
                                            <td>
                                                @item.cout
                                            </td>
                                            <td>
                                                @item.dateBegin
                                            </td>
                                            <td>
                                                @item.dateEnd
                                            </td>
                                            <td>
                                                @item.status
                                            </td>
                                            <td>
                                                @Html.ActionLink("Edit", "Edit", new { id = item.idRequest }) |
                                                @Html.ActionLink("Details", "Details", new { id = item.idRequest }) |
                                                @Html.ActionLink("Delete", "Delete", new { id = item.idRequest })
                                            </td>
                                        </tr>
                                    }
                      
                                </tbody>
                                <tfoot>
                                    <tr>
                                    <th class="sorting_asc" tabindex="0" aria-controls="example" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 118px;">id request</th><th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 150px;">price</th><th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 180px;">begin date</th><th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending" style="width: 180px;">end date</th><th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" aria-label="Salary: activate to sort column ascending" style="width: 160px;">status</th><th style="width: 250px;">actions</th></tr>
                                </tfoot>
                            </table><div class="dataTables_info" id="example_info" role="status" aria-live="polite">Showing 1 to 10 of 57 entries</div><div class="dataTables_paginate paging_simple_numbers" id="example_paginate"><a class="paginate_button previous disabled" aria-controls="example" data-dt-idx="0" tabindex="0" id="example_previous">Previous</a><span><a class="paginate_button current" aria-controls="example" data-dt-idx="1" tabindex="0">1</a><a class="paginate_button " aria-controls="example" data-dt-idx="2" tabindex="0">2</a><a class="paginate_button " aria-controls="example" data-dt-idx="3" tabindex="0">3</a><a class="paginate_button " aria-controls="example" data-dt-idx="4" tabindex="0">4</a><a class="paginate_button " aria-controls="example" data-dt-idx="5" tabindex="0">5</a><a class="paginate_button " aria-controls="example" data-dt-idx="6" tabindex="0">6</a></span><a class="paginate_button next" aria-controls="example" data-dt-idx="7" tabindex="0" id="example_next">Next</a></div>
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->

           
</section>




