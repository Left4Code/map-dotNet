@model IEnumerable<Presentation.Models.Projet>

@{
    ViewBag.Title = "Index";
}



<div class="row">
    <div class="col-12">
        <div class="box">
            <div class="box-header with-border">

                <h3 class="box-title">List Projects</h3>

            </div>
            <!-- /.box-header -->
            <div class="box-body no-padding">
                <div class="table-responsive">

                    <table id="project-table" class="table table-hover">
                        <tr>
                          
                            <th>Picture</th>
                            <th>Name</th>
                            <th>Score</th>
                            <th>Ressource number</th>
                            
                            <th>Budget</th>
                          
                            <th>Address</th>

                            <th>Project type</th>
                            <th>Actions</th>
                            <th></th>
                        </tr>
                        @foreach (var item in ViewBag.result)
                        {
                            <tr>


                                <td>
                                    @{string path = "~/Content/Uploads/" + @item.picture;}

                                    <img src="@Url.Content(path)" width="50" height="50" />

                                </td>
                              
                                <td>
                                    @item.name
                                </td>
                                <td>@item.score</td>
                                <td>
                                    @item.nbRessources
                                </td>
                                <td>
                                    @item.Budget
                                </td>
                                <td>
                                    @item.adresse
                                </td>
                              
                            
                                @if(item.typeProject.ToString() == "Mobile")
                                {
                                    <td><span class="label label-danger">@item.typeProject</span></td>}
                                @if (item.typeProject.ToString() == "Web")
                                {
                                    <td><span class="label label-success">@item.typeProject</span></td>
                                }
                                @if (item.typeProject.ToString() == "Desktop")
                                {
                                    <td><span class="label label-warning">@item.typeProject</span></td>
                                }

                                <td>
                                    <button type="button" onclick="location.href='@Url.Action("Delete", "Project" , new { id = item.idProject })'" class="btn btn-sm btn-danger-outline" data-toggle="tooltip" data-original-title="Delete"><i class="ti-trash" aria-hidden="true" ></i></button>
                                    <button type="button" onclick="location.href='@Url.Action("Edit", "Project" , new { id = item.idProject })'" class="btn btn-sm btn-primary-outline" data-toggle="tooltip" data-original-title="Delete"><i class="ti-pencil-alt" aria-hidden="true"></i></button>
                                  
                                  
                                   
                                </td>
                                <td><button class="btn btn-blue" align="center">  @Html.ActionLink("Assign skills", "Assign", new { id = item.idProject })</button></td>
                            </tr>
                                        }
                    </table>


                </div>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>

<button class="btn btn-blue" align="center">  @Html.ActionLink("Create project", "Create")</button>
