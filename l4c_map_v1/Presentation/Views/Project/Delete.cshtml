@model Presentation.Models.Projet

@{
    ViewBag.Title = "Delete";
}




    <hr />
    <div class="row">
        <div class="col-12">
            <div class="box">
                <div class="box-header with-border">

                    <h3 class="box-title">Are you sure you want to delete this project ?<h3>

                </div>
                <!-- /.box-header -->
                <div class="box-body no-padding">
                    <div class="table-responsive">

                        <table class="table table-hover">
                            <tr>
                                <th>Picture</th>
                                <th>Name</th>
                                <th>Score</th>
                                <th>Ressource number</th>

                                <th>Budget</th>

                                <th>Address</th>

                                <th>Project type</th>


                            </tr>
                           
                                <tr>


                                    <td>
                                        @{string path = "~/Content/Uploads/" + ViewBag.result.picture;}

                                        <img src="@Url.Content(path)" width="50" height="50" />

                                    </td>

                                    <td>
                                        @ViewBag.result.name
                                    </td>
                                    <td>@ViewBag.result.score</td>
                                    <td>
                                        @ViewBag.result.nbRessources
                                    </td>
                                    <td>
                                        @ViewBag.result.Budget
                                    </td>
                                    <td>
                                        @ViewBag.result.adresse
                                    </td>


                                    @if (ViewBag.result.typeProject.ToString() == "Mobile")
                                    {
                                        <td><span class="label label-danger">ViewBag.result.typeProject</span></td>}
                                    @if (ViewBag.result.typeProject.ToString() == "Web")
                                    {
                                        <td><span class="label label-success">@ViewBag.result.typeProject</span></td>
                                    }
                                    @if (ViewBag.result.typeProject.ToString() == "Desktop")
                                    {
                                        <td><span class="label label-warning">@ViewBag.result.typeProject</span></td>
                                    }

                              
                                </tr>
                                            
                        </table>


                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-pink" />
            <button class="btn btn-blue" align="center">  @Html.ActionLink("Back to Project list", "Index")</button>
        </div>
    }
</div>
