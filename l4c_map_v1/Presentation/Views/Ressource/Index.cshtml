@Html.ActionLink("Add skills", "Create", "Skils", null, null)

<div class="row">
    <div class="col-12">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Ressources list</h3>
                <div class="box-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">
                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body no-padding">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Last Name
                            </th>
                            <th>
                                Salary
                            </th>
                            <th>
                                Started working
                            </th>
                            <th>
                                Working end
                            </th>
                            <th>
                                Score
                            </th>
                            <th>
                                Availability
                            </th>
                            <th>
                                Seniority
                            </th>
                            <th>
                                Specialty
                            </th>
                            <th>
                                Contract type
                            </th>
                            <th>
                                Actions
                            </th>
                        </tr>
                        @foreach (var item in ViewBag.result)
                        {
                            <tr>


                                <td>@item.Name</td>
                                <td>@item.LastName</td>
                                <td>@item.cost DT </td>
                                <td><span class="text-muted"><i class="fa fa-clock-o"></i> @item.dateDebut.ToShortDateString()</span> </td>
                                <td><span class="text-muted"><i class="fa fa-clock-o"></i> @item.dateFin.ToShortDateString()</span> </td>

                                <td>@item.note</td>
                                @if (item.cv != "Available")
                                {
                                    <td>
                                        <span class="label label-danger">@item.cv</span>
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <span class="label label-success">@item.cv</span>
                                    </td>

                                }

                                <td>@item.seniority</td>
                                <td>@item.specialty</td>

                                <td>@item.typeContrat</td>



                                <td>
                                    <button type="button" class="btn btn-default btn-sm"><i class="ion ion-trash-a"></i></button>
                                    <button type="button" class="btn btn-default btn-sm"><i class="ion ion-share">@Html.ActionLink("d" ,"Details", "Ressource", new { id = @item.id }, null)
</i></button>

                            </tr>
                        }
