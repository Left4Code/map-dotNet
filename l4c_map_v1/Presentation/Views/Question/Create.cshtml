@model Presentation.Models.QuestionVm

@{
    ViewBag.Title = "Create";
    var pourcentageMax = ViewBag.numberOfQuestion * 10;
    var pourcentage = ViewBag.number * 20;
}

<h2>Passing test : @Model.test.name</h2>
<div class="progress">
    <div class="progress-bar progress-bar-green" role="progressbar" aria-valuenow="@pourcentage" aria-valuemax="@pourcentageMax" style="width:@pourcentage%">

    </div>
</div>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Question</h4>
        <hr />
        <label class="text-primary">Response 1 :</label> <label class="text-fade">@Model.syn1</label>
        <br />
        <label class="text-primary">Response 2 :</label> <label class="text-fade">@Model.syn2</label>
        <br />
        <label class="text-primary">Response 3 :</label> <label class="text-fade">@Model.syn3</label>
        <div class="form-group">
            @Html.LabelFor(model => model.numberChosed, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.numberChosed, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.numberChosed, "", new { @class = "text-danger" })
            </div>
        </div>
       
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Validate" class="btn btn-default" />
            </div>
        </div>
    </div>
}
