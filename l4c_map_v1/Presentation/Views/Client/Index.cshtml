@model IEnumerable<Presentation.Models.Client>
@{
 
}


<div class="row">
    <div class="col-12">
        <div class="box">
            <div class="box-header with-border">

                <h3 class="box-title">List Clients</h3>
              
            </div>
            <!-- /.box-header -->
            <div class="box-body no-padding">
                <div class="table-responsive">
          
                    <table class="table table-hover">
                        <tr>
                           
                            <th>Category</th>
                          
                            <th>LastName</th>
                            <th>Name</th>
                            <th>Picture</th>
                            <th>Actions</th>

                        </tr>
                    @foreach (var item in ViewBag.result)
                    {
                        <tr>
                           

                           @if(item.typeCategory.ToString() == "Public")
                           {     <td><span class="label label-success">@item.typeCategory</span></td>}
                            @if (item.typeCategory.ToString() == "Private")
                            {  <td><span class="label label-danger">@item.typeCategory</span></td> 
                           }
                           
                            <td>
                                @item.LastName
                            </td>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @{string path = "~/Content/Uploads/" + @item.Picture;}

                                <img src="@Url.Content(path)" width="50" height="50" />
                              
                            </td>
                            
                            <td>

                                @Html.ActionLink("delete", "Delete", "Client", new { id = item.id }, null)|
                                @Html.ActionLink("edit", "Edit", "Client", new { id = item.id }, null)
                            </td>
                        </tr>
                    }
                    </table>
           

                </div>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>

<button class="btn btn-blue" align="center">  @Html.ActionLink("Create client", "Create")</button>