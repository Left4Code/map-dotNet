@model Presentation.Models.ApplicantVm
@{string path = "~/images/" + @Model.picture;}
<div class="box">
    <div class="box-header with-border">
        <h3 class="box-title">@Model.name @Model.lastname</h3>
    </div>
    <div class="box-body">
        <div id="slimtest2">
            <div class="row">
                <div class="col-sm-3"><img src="@Url.Content(path)" class="img-responsive" alt="" /></div>
                <div class="col-sm-9">
                    <p>Country : @Model.country</p>
                    @if (Model.applicantState.Equals("Waiting"))
                    {
                        <p>State : <span class="badge badge-pill badge-default">@Model.applicantState</span></p>
                    }else
                    {
                        <p>State : <span class="badge badge-pill badge-success">@Model.applicantState</span></p>
                    }
                    <p>Age : @Model.age</p>
                    <p>Chances : @Model.chanceOfSuccess %</p>
                </div>
             </div>
        </div>
    </div>
</div>